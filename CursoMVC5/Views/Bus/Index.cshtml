@using CursoMVC5.Models
@model List<Bus_CLS>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>


@Html.ActionLink("Agregar", "Agregar", "Bus", new {@class="btn"})

<div class="container"
    <div class="row mt-3">
        <div class="col">
            <table class="table table-bordered table-hover">
                <thead class="table-primary">
                    <tr>
                        <td>@Html.LabelFor(p => p[0].IidBus)</td>
                        <td>@Html.LabelFor(p => p[0].placa)</td>
                        <td>@Html.LabelFor(p => p[0].NombreModelo)</td>
                        <td>@Html.LabelFor(p => p[0].NombreSucursal)</td>
                        <td>@Html.LabelFor(p => p[0].NombreTipoBus)</td>
                        <td>Operaciones</td>
                    </tr>
                </thead>
                <tbody class="text-center table-striped-columns ">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.IidBus</td>
                            <td>@item.placa</td>
                            <td>@item.NombreModelo</td>
                            <td>@item.NombreSucursal</td>
                            <td>@item.NombreTipoBus</td>
                            <td>
                                @Html.ActionLink("Editar", "Editar", "Bus",new { item.IidBus }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Editar", "Eliminar", "Bus", @item.IidBus, new { @class = "btn btn-danger" })


                            </td>
                        </tr>
                    }

                </tbody>


            </table>



        </div>
    </div>
</div>


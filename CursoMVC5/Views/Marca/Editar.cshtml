@using CursoMVC5.Models
@model Marca_CLS

@{
    ViewBag.Title = "Editar";
}

<h2>Editar Marca</h2>

<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Editar", "Marca", FormMethod.Post))
        {
            <div>
                @Html.LabelFor(p => p.nombre, new { @class = "w-100" })
                @Html.TextBoxFor(P => P.nombre, new { @class = "from-control w-100" })
                @Html.ValidationMessage("nombre", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.descripcion, new { @class = "w-100" })
                @Html.TextBoxFor(P => P.descripcion, new { @class = "from-control w-100" })
                @Html.ValidationMessage("descripcion", new { @class = "text-danger" })
            </div>

            <br />
            <div>
                <input type="submit" class="btn btn-primary" value="Guardar" />
            </div>


        }
    </div>
</div>